<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/strikethru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/strikethru"
        android:backgroundTint="@color/colorAccent"
        android:checked="false"
        android:contentDescription="@null"
        android:thumb="@null"
        app:layout_constraintBottom_toTopOf="@+id/logo_github"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logo_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/lottie_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/strikethru"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/github" />

    <de.checkathon.animatedicons.customviews.LottieSwitch
        android:id="@+id/lottie_switch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/logo_github"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </de.checkathon.animatedicons.customviews.LottieSwitch>

    <TextView
        android:id="@+id/check_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/lottie_switch"
        app:layout_constraintStart_toEndOf="@+id/lottie_switch"
        app:layout_constraintTop_toTopOf="@+id/lottie_switch" />

</androidx.constraintlayout.widget.ConstraintLayout>